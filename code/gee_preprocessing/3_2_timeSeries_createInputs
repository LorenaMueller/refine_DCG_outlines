TPI = rescale(TPI, 'TPI');
glacierInventory = glacierInventory.rename('glacierInventory');
  
  // Combine and export the final image
  var image = lstNir
    .addBands(ndri)
    .addBands(superpixelMeans)
    .addBands(edges)
    .addBands(smoothLstNir)
    .addBands(ndwi)
    .addBands(ndsi)
    .addBands(ndvi)
    .addBands(slope)
    .addBands(aspect)
    .addBands(elevation)
    .addBands(gradient)
    .addBands(TPI)
    .addBands(glacierInventory);

